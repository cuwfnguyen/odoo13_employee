    <menuitem
            id="menu_hr_employee"
            name="Check in"
            action="action_employee_check_in"
            parent="hr.menu_hr_root"
            sequence="5"/>
    <menuitem
            id="sub_menu_hr_employee"
            name="Check in"
            action="action_employee_check_in"
            parent="menu_hr_employee"
            sequence="5"/>
    <menuitem
